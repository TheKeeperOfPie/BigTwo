<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <ImageView
        android:id="@+id/winner_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:src="@drawable/app_icon"
        android:contentDescription="@string/player_icon_description"
        />

    <TextView
        android:id="@+id/winner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/winner_icon"
        android:layout_toRightOf="@+id/winner_icon"
        android:layout_toStartOf="@+id/winner_place"
        android:layout_toLeftOf="@+id/winner_place"
        android:layout_margin="16dp"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:id="@+id/winner_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/COLOR_ACCENT"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="?android:textAppearanceLarge"
        />

</RelativeLayout>